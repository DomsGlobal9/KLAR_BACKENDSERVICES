{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "server.ts",
        "hotel-search-service/src/**/*",
        "hotel-booking-service/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "hotel-search-service/node_modules",
        "hotel-booking-service/node_modules"
    ]
}